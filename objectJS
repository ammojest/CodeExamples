// https://www.w3schools.com/js/js_objects.asp


class Footballer { constructor ( name, surName, position, team) {
    this.name = name;
    this.surName = surName;
    this.position = position;
    this.team = team;
}};

let person = new Footballer('John', 'Wark', 'defender', 'Ipswich');

const Content = `
<div class="container-fluid">
    <div class="row">
        <h1>Player: ${person.name} ${person.surName}</h1>
        <ul>
            <li>Team: ${person.team}</li>
            <li>Position: ${person.position}</li>
        </ul>
    </div>
</div>
`;


const main =  document.querySelector("main");
main.innerHTML = Content;


